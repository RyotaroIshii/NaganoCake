<div class="container">
  <div class="row">
    <div class="offset-1"></div>
    <div class="col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">新規会員登録</h5></br>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-10">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="pb-1">名前</td>
            <td class="pb-1">
              （姓）　<%= f.text_field :last_name, autofocus: true, placeholder: "令和", :class => "mr-3", :size => "30" %>
              （名）　<%= f.text_field :first_name, placeholder: "道子", :size => "30" %>
            </td>
          </tr>
          <tr>
            <td class="py-1">フリガナ</td>
            <td class="py-1">
              （セイ）<%= f.text_field :last_name_kana, placeholder: "レイワ", :class => "mr-3", :size => "30" %>
              （メイ）<%= f.text_field :first_name_kana, placeholder: "ミチコ", :size => "30" %>
            </td>
          </tr>
          <tr>
            <td class="py-1">メールアドレス</td>
            <td class="py-1">　　　　<%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", :size => "30" %></td>
          </tr>
          <tr>
            <td class="py-1">郵便番号(ハイフンなし)</td>
            <td class="py-1">　　　　<%= f.text_field :post_code, placeholder: "0000000", :size => "30" %></td>
          </tr>
          <tr>
            <td class="py-1">住所</td>
            <td class="py-1">　　　　<%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", :size => "60" %></td>
          </tr>
          <tr>
            <td class="py-1">電話番号(ハイフンなし)</td>
            <td class="py-1">　　　　<%= f.telephone_field :telephone_number, placeholder: "0000000000", :size => "30" %></td>
          </tr>
          <tr>
            <% if @minimum_password_length %>
            <td class="py-1">パスワード(<%= @minimum_password_length %>文字以上)</td>
            <% end %>
            <td class="py-1">　　　　<%= f.password_field :password, autocomplete: "new-password", :size => "30" %></td>
          </tr>
          <tr>
            <td class="pt-2">パスワード(確認用)</td>
            <td class="pt-2">　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "30" %></td>
          </tr>
          <tr>
            <td class="pb-0"></td>
            <td class="pb-0">　　　　<%= f.submit "新規登録", :class => "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
    <div class="col-12">
      <h5 class="d-inline-block my-3 mx-5 px-3" style="background-color:#dcdcdc;">既に登録済みの方</h5>
    </div>
    <div class="col-10 mx-auto">
      <p class="my-0"><u><%= link_to 'こちら', new_customer_session_path %></u>からログインしてください。</p>
    </div>
  </div>
</div>