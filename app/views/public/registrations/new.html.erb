<div class="countainer">
  <div class="row">
    <div class="offset-1"></div>
    <div class="col-11">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#c0c0c0;">新規会員登録</h2>
    </div>
    <div class="offset-9"></div>
  </div>
  <div class="row">
    <div class="offset-1 col-9">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-2 mb-0" style="font-size: 14px;">名前</label>
        <label class="col-sm-1 mb-0" style="text-align: right; font-size: 14px;">(姓)　</label>
        <%= f.text_field :last_name, autofocus: true, :placeholder => "令和", :class => "col-sm-3" %>
        <label class="col-sm-1 mb-0" style="text-align: right; font-size: 14px;">(名)　</label>
        <%= f.text_field :first_name, :placeholder => "道子", :class => "col-sm-3" %>
      </div>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-2 mb-0" style="font-size: 14px;">フリガナ</label>
        <label class="col-sm-1 mb-0" style="text-align: right; font-size: 14px;">(セイ)</label>
        <%= f.text_field :last_name_kana, :placeholder => "レイワ", :class => "col-sm-3" %>
        <label class="col-sm-1 mb-0" style="text-align: right; font-size: 14px;">(メイ)</label>
        <%= f.text_field :first_name_kana, :placeholder => "ミチコ", :class => "col-sm-3" %>
      </div>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-3 mb-0" style="font-size: 14px;">メールアドレス</label>
        <%= f.email_field :email, autocomplete: "email",:placeholder => "sample@example.com", :class => "col-sm-3" %>
      </div>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-3 mb-0" style="font-size: 14px;">郵便番号(ハイフンなし)</label>
        <%= f.text_field :post_code, :placeholder => "0000000", :class => "col-sm-3" %>
      </div>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-3 mb-0" style="font-size: 14px;">住所</label>
        <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", :class => "col-sm-7" %>
      </div>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-3 mb-0" style="font-size: 14px;">電話番号(ハイフンなし)</label>
        <%= f.text_field :telephone_number, :placeholder => "00000000000", :class => "col-sm-3" %>
      </div>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-3 mb-0" style="font-size: 14px;">
          パスワード
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)
          <% end %>
        </label>
        <%= f.password_field :password, autocomplete: "new-password", :class => "col-sm-3" %>
      </div>
      <div class="row mb-3 d-flex align-items-center">
        <label class="col-sm-3 mb-0" style="font-size: 14px;">パスワード(確認用)</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "col-sm-3" %>
      </div>
    </div>
    <div class="offset-2"></div>
  </div>
  <div class="row d-flex">
    <div class="offset-3 col-sm-3">
      <%= f.submit " 新規登録 ", :class => "btn btn-success px-5 py-1" %>
    </div>
    <div class="offset-6"></div>
    <% end %>
  </div>
  <div class="row">
    <div class="offset-1"></div>
    <div class="col-11">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#c0c0c0;">既に登録済みの方</h5>
    </div>
  </div>
  <div class="row">
    <div class="offset-2"></div>
    <div class="col-10 ">
      <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>
