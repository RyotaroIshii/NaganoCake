<div class="container">
  <div class="row">
    <div class="offset-2 col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">新規会員登録</h5></br>
    </div>
    <div class="col-lg-12 mx-auto">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="row mb-3">
          <label class="col-sm-3">名前(姓)</label>
          <%= f.text_field :last_name, autofocus: true %>
          <label class="col-sm-1">(名)</label>
          <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">フリガナ(セイ)</label>
          <%= f.text_field :last_name_kana, autofocus: true %>
          <label class="col-sm-1">(メイ)</label>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">住所</label>
          <%= f.text_field :address, autofocus: true, :class => "col-sm-6" %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">
            パスワード
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>
          </label>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">パスワード(確認用)</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3"></label>
          <%= f.submit "新規登録", :class => "btn btn-success px-5" %>
        </div>
      <% end %>
    </div>
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-3 mx-5 px-3">既に登録済みの方</h5>
    </div>
    <div class="col-10 mx-auto">
      <p class="my-0"><u><%= link_to 'こちら', new_customer_session_path %></u>からログインしてください。</p>
    </div>
  </div>
</div>