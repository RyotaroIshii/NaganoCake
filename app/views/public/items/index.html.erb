<div class ="container">
  <div class ="row mt-5">
    <div class="col-2 h-75">
      <div class="border border-dark ">
        <p class="my-1 text-center"> ジャンル検索</p>
      </div>
      <div class="border border-dark border-top-0 pt-2 pl-2">
        <p>ケーキ</p>
        <p>焼き菓子</p>
        <p>プリン</p>
        <p>キャンディ</p>
      </div>
    </div>
    <div class ="col-8">
      <h3 class ="font-weight-bold">商品一覧<span>全(<%= @items.count %>)件</span></h3>
        <div class ="mt-4 d-flex flex-wrap">
          <% @items.each do |item| %>
          <div class ="mr-1 mb-2">
            <%= link_to show_item_path(item.id) do %>
              <% if item.image.attached? %>
                <%= image_tag item.get_image(150,100) %>
              <% else %>
                <%= image_tag 'no_image', size: "150x100" %>
              <% end %><br>
              <p class ="text-dark mt-2"><%= item.name %></p>
              <p class ="text-dark mt-2"><%= item.price %></p>
            <% end %>
          </div>
          <% end %>
        </div>
    </div>
    <%= paginate @items %>
  </div>
</div>