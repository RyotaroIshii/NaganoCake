<div class="container">
  <div class="row">
    <div class="offset-2 col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">会員情報編集</h5></br>
    </div>
    <div class="col-lg-12 mx-auto">
      <%= form_with model: @customer, url: customers_path do |f| %>
      <%= render "public/shared/error_messages", resource: current_customer %>
        <div class="row mb-3">
          <label class="col-sm-3">氏名</label>
          <%= f.text_field :last_name, autofocus: true %>
          <label class="col-sm-1"></label>
          <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">フリガナ</label>
          <%= f.text_field :last_name_kana, autofocus: true %>
          <label class="col-sm-1"></label>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">郵便番号</label>
          <%= f.text_field :post_code, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">住所</label>
          <%= f.text_field :address, autofocus: true, :class => "col-sm-6" %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">電話番号</label>
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3">パスワード </label>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="row mb-3">
          <label class="col-sm-3"></label>
          <%= f.submit "変更内容を保存", :class => "btn btn-success px-5" %>
          <label class="col-sm-1"></label>
          <%= link_to '退会する', unsubscribe_path, :class =>  "btn btn-sm btn-danger px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>