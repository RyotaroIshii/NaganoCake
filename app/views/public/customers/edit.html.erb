<div class="container">
  <div class="row">
    <div class="offset-2 col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">会員情報編集</h5></br>
    </div>
    <div class="col-lg-12 mx-auto">
      <%= form_with model: @customer, url: update_path do |f| %>
      <%= render "public/shared/error_messages", resource: current_customer %>
      <table class ="table table-borderless">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, :size => "20", :class => "mr-5" %> <%= f.text_field :first_name, :size => "20" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, :size => "20", :class => "mr-5" %> <%= f.text_field :first_name_kana, :size => "20" %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :post_code, :size => "20" %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, :size => "60" %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number, :size => "20" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, :size => "20" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit '編集内容を保存', :class => "btn btn-success mr-5" %>
              <%= link_to '退会する', unsubscribe_path(@customer), :class => "btn btn-danger ml-5" %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>