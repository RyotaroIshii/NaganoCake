<div class="container">
  <div class="row">
    <div class="offset-2 col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">マイページ</h5></br>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block col-2">登録情報</h5>
      <%= link_to '編集する', customers_edit_path, :class => "btn  btn-success px-3 mb-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-md-12">
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <td class="table-active">氏名</td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <td class="table-active">カナ</td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td class="table-active">郵便番号</td>
              <td><%= @customer.post_code %></td>
            </tr>
            <tr>
              <td class="table-active">住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td class="table-active">電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td class="table-active">メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <div class="col-12 mb-4">
      <h5 class="d-inline-block col-2">配送先</h5>
        <!--link_to '一覧を見る', addresses_path, :class => "btn btn-sm btn-primary" %>-->
    </div>
    <div class="col-12 mb-4">
      <h5 class="d-inline-block col-2">注文履歴</h5>
        <!--link_to '一覧を見る', orders_path, :class => "btn btn-sm btn-primary" %>-->
    </div>
  </div>
</div>