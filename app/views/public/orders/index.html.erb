<div class="countainer">
  <div class="row">
    <div class="offset-2"></div>
    <div class="col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">注文履歴一覧</h5>
    </div>
  </div>
  <div class ="row">
    <div class ="col-12 px-5">
      <table class ="table table-bordered mt-3">
        <tr class="bg-light">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <td class="p-1"><br><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td class="p-1">〒<%= order.post_code %><br><%= order.address %><br><%= order.name %></td>
            <td class="p-1">
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td class="p-1"><br><%= order.total_payment.to_s(:delimited) %>円</td>
            <td class="p-1"><br><%= order.status_i18n %></td>
            <td class="p-1"><br><%= link_to '表示する', show_order_path(order), :class => "btn btn-primary py-1 px-2" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>