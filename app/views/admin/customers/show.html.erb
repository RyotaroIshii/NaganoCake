<div class="countainer offset-1">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block my-4 mx-0 px-3" style="background-color:#dcdcdc;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
    </div>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">会員ID</label>
    <label class="col-2 mb-0" style="font-size: 14px;"><%= @customer.id %></label>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">氏名</label>
    <label class="col-2 mb-0" style="font-size: 14px;"><%= @customer.last_name %><%= @customer.first_name %></label>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">フリガナ</label>
    <label class="col-2 mb-0" style="font-size: 14px;"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></label>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">郵便番号</label>
    <label class="col-2 mb-0" style="font-size: 14px;"><%= @customer.post_code %></label>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">住所</label>
    <label class="col-2 mb-0" style="font-size: 14px;"><%= @customer.address %></label>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">電話番号</label>
    <label class="col-2 mb-0" style="font-size: 14px;"><%= @customer.telephone_number %></label>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">メールアドレス</label>
    <label class="col-2 mb-0" style="font-size: 14px;"><%= @customer.email %></label>
  </div>
  <div class="row mb-3 d-flex ">
    <label class="col-2 mb-0" style="font-size: 14px;">会員ステータス</label>
    <% if @customer.is_active == true %>
    <label class="col-2 mb-0" style="font-size: 14px; font-color: red;">退会</label>
    <% else %>
    <label class="col-2 mb-0" style="font-size: 14px; font-color: green;">有効</label>
    <% end %>
  </div>
</div>
