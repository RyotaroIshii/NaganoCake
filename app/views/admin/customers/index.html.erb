<div class="countainer">
  <div class="row">
    <div class="offset-2"></div>
    <div class="col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">会員一覧</h5>
    </div>
  </div>
  <div class="row">
    <div class="offset-3"></div>
    <div class="col-6">
      <table class="table">
      <thead style="font-size:14px; background-color:#dcdcdc;">
        <tr>
          <th>会員ID</th>
          <th><u>氏名</u></th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tbody>
          <% customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_show_customer_path(customer) do %>
              <span class ="text-dark border-bottom border-dark"><%= customer.last_name %><%= customer.first_name %></span>
            <% end %></td>
              <td><%= customer.email %></td>
              <% if customer.is_active == false %>
                <td class="text-success font-weight-bold">有効</td>
              <% else %>
                <td class="text-secondary font-weight-bold">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </tbody>
    </table>
    </div>
    <div class="offset-3"></div>
  </div>
</div>
