<div class="countainer">
  <div class="row">
    <div class="offset-2"></div>
    <div class="col-8">
      <div class ="row">会員一覧</h5>
    </div>
    <div class="col-2">
      <%= link_to "+", admin_create_item_path, :class => "btn btn-outline-secondary rounded-circle" %>
    </div>
  </div>
  <div class="row">
    <div class="offset-1"></div>
    <div class="col-10">
      <table class="table">
      <thead style="font-size:14px; background-color:#dcdcdc;">
        <tr>
          <th>商品ID</th>
        　<th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.with_tax_price %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_active == true %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-secondary">販売停止中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </tbody>
    </table>
    <%= paginate @items %>
    </div>
    <div class="offset-1"></div>
  </div>
</div>
