<div class="container">
  <div class="row">
    <div class="offset-2"></div>
    <div class="col-8">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">商品一覧</h5>
    </div>
    <div class="col-2">
      <%= button_to admin_new_item_path, method: :get, :class => "btn btn-outline-secondary rounded-circle mt-4" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="offset-1"></div>
    <div class="col-10">
      <table class="table">
        <thead class="bg-light" style="font-size:14px;">
          <tr>
            <th class="col-1 px-0">商品ID</th>
          　<th class="col-4 px-1">商品名</th>
            <th class="col-1 pl-0 pr-2">税抜価格</th>
            <th class="col-4 px-2">ジャンル</th>
            <th class="col-2 px-0">ステータス</th>
          </tr>
        </thead>
        <tbody class="table-borderless border-bottom">
          <% @items.each do |item| %>
          <tr>
            <td class="col-1 px-0"><%= item.id %></td>
            <td class="col-4 px-1"><u><%= link_to item.name, admin_show_item_path(item), :class => "text-dark" %></u></td>
            <td class="col-1 pl-0 pr-2"><%= item.price.to_s(:delimited) %></td>
            <td class="col-4 px-2"><%= item.genre.name %></td>
            <% if item.is_active == true %>
            <td class="col-2 px-0 text-success">販売中</td>
            <% else %>
            <td class="col-2 px-0 text-secondary">販売停止中</td>
            <% end %>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="offset-1"></div>
  </div>
</div>
