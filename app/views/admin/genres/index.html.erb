<div class="container">
  <div class="row">
    <div class="offset-2"></div>
    <div class="col-10">
      <h5 class="d-inline-block my-4 mx-4 px-3" style="background-color:#dcdcdc;">ジャンル一覧・追加</h5>
    </div>
  </div>
  <div class ="row">
    <div class ="col-6">
      <%= form_with model: @genre, url: admin_genre_create_path, method: :post do |f| %>
        <%= f.label :ジャンル名, :class => "mr-4 my-4" %>
        <%= f.text_field :name, autocomplete: "name", :class =>"mr-4 ml-4" %>
        <%= f.submit '新規登録', :class => "btn btn-success btn-lg ml-2" %>
      <% end %>
    </div>
  </div>
  <div class="col-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th colspan="2">ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する',genre_edit_path(genre.id), :class => "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>